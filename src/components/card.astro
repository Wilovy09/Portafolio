---
const { img, title, desc, tecnos, link, demo } = Astro.props;
---

<a href={demo ?? link} target="_blank">
  <div
    class="group relative mb-4 max-w-xs cursor-pointer rounded-xl bg-white shadow duration-150 hover:scale-[101%] hover:shadow-md"
  >
    <img
      class="w-full rounded-lg object-cover object-center"
      src={img}
      alt={title}
    />
    <div class="absolute inset-0 flex flex-col justify-end rounded-lg bg-black bg-opacity-75 opacity-0 p-4 text-white duration-300 group-hover:opacity-100">
      <p class="text-lg font-bold text-gray-100">{title}</p>
      <p class="font-semibold text-gray-300">{desc}</p>
      <div class="flex justify-center flex-wrap">
        <div class="text-white flex gap-2">
          {tecnos.map((tecno: string) => (
            <p class="">{tecno}</p>
          ))}
        </div>
      </div>
    </div>
  </div>
</a>

